{
  "metadata": {
    "ref": {
      "name": "graph-runner",
      "version": "1.0.0"
    },
    "description": "Graph-based task execution engine with managed thread-specific environments"
  },
  "specs": {
    "capabilities": {
      "threads": true,
      "interrupts": true,
      "streaming": {
        "result": true,
        "custom": true
      }
    },
    "input": {
      "description": "Input format for agent tasks.",
      "properties": {
        "task": {
          "description": "The task to execute",
          "title": "Task",
          "type": "string"
        },
        "add_infos": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Additional information for task execution",
          "title": "Add Infos"
        }
      },
      "required": [
        "task"
      ],
      "type": "object"
    },
    "output": {
      "description": "Output format for agent results.",
      "properties": {
        "success": {
          "description": "Whether the task was completed successfully",
          "title": "Success",
          "type": "boolean"
        },
        "message": {
          "description": "Status or error message",
          "title": "Message",
          "type": "string"
        },
        "data": {
          "anyOf": [
            {
              "type": "object"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Result data if any",
          "title": "Data"
        }
      },
      "required": [
        "success",
        "message"
      ],
      "type": "object"
    },
    "config": {
      "description": "Full agent configuration.",
      "properties": {
        "browser": {
          "$ref": "#/$defs/BrowserConfig"
        },
        "execution": {
          "$ref": "#/$defs/ExecutionConfig"
        },
        "vision": {
          "$ref": "#/$defs/VisionConfig"
        }
      },
      "required": [
        "browser",
        "execution",
        "vision"
      ],
      "type": "object"
    }
  }
}